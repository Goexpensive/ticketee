<%= simple_form_for([project, ticket]) do |form| %>
  <%= form.input :name %>
  <%= form.input :description %>
  <div id="attachments">
    <h3>Attachments</h3>
    <%= render partial: "attachments/form", locals: { f: form, index: 0 } %>
  </div>
  <%= form.button :submit, class: "btn-primary" %>
<% end %>
<p>
  <%= link_to "Add another file", new_attachment_path, remote: true, id: "add_file", data: { params: {index: ticket.attachments.size} } %>
</p>